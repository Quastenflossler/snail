<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>

<Pane xmlns:fx="http://javafx.com/fxml" fx:controller="de.quastenflossler.snail.ui.controller.UserPrefSceneController">

    <VBox styleClass="default_box">

        <fx:include source="userprefSettingsTabPane.fxml"/>

        <HBox alignment="CENTER_RIGHT" styleClass="default_box">

            <Button fx:id="okUserPrefButton" text="%settings.okbutton" GridPane.columnIndex="0" GridPane.rowIndex="5"
                    onAction="#okUserPrefAction"/>

            <Button fx:id="cancelUserPrefButton" text="%settings.cancelbutton" GridPane.columnIndex="1" GridPane.rowIndex="5"
                    onAction="#cancelSaveUserPrefAction"/>

            <Button fx:id="saveUserPrefButton" text="%settings.savebutton" GridPane.columnIndex="2" GridPane.rowIndex="5"
                    onAction="#handleSaveUserPrefAction"/>

        </HBox>

    </VBox>

</Pane>
